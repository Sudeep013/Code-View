<div class="signin">
    <form class="form-signin" method="post">
        {{#each errorMessage}}
            <div class="error">
                {{this.msg}}
            </div>
        {{/each}}
    <h2 class="form-title">New Account</h2>
    <br>
    <input type="text" name="name"  placeholder="Name" required="" autofocus="" class="input-field">
    <br>
    <input type="email" name="email"  placeholder="Your Email" required="" autofocus="" class="input-field">
    <br>
    <input type="password" name="password"  placeholder="Password" required="" class="input-field">
    <br>
    <input type="password" name="confirmPassword"  placeholder="Confirm Password" required="" class="input-field">
    <br>
    <button type="submit" class="form-button">Sign Up</button>
    </form>
</div>
